#!/bin/bash

# Import utils.h
. $(dirname ${BASH_SOURCE[0]})/utils.sh
RequireDocker
PermissionsCheck

__qi_application_name=$1

function CheckProviderArgument()
{
    if ! [ $# = 1 ]; then
        echo "USE: $0 <PROVIDER>" 1>&2
        exit 1
    fi
}

PROVIDER=$2
CheckProviderArgument $PROVIDER

# Tags and pushes an image to a remote registry.
# ARGUMENTS:
#   LOCAL_IMAGE - Docker image name on the local machine
#   REGISTRY    - The remote Container Registry URL
#.
# Returns: the remote image name as REMOTE_IMAGE.
#
function PushToRemote()
{
    LOCAL_IMAGE=$1
    REGISTRY=$2

    REMOTE_IMAGE="${REGISTRY}/${LOCAL_IMAGE}:dep.$(id -u -n $RUID)"

    docker tag ${LOCAL_IMAGE} ${REMOTE_IMAGE} > /dev/null
    docker push ${REMOTE_IMAGE} > /dev/null

    echo ${REMOTE_IMAGE}
}

export -f PushToRemote

__qi_container_mount=/.persistant_data
__qi_container_name="${PROVIDER}-config"
__qi_cloud_resources="$(id -un $RUID)-transient-resources"

. $(dirname ${BASH_SOURCE[0]})/${PROVIDER} \
    $__qi_application_name \
    $__qi_container_name \
    $__qi_container_mount \
    $__qi_cloud_resources
